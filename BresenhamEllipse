    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int xc=Integer.parseInt(jTextField1.getText());
        int yc=Integer.parseInt(jTextField2.getText());
        int rx=Integer.parseInt(jTextField3.getText());
        int ry=Integer.parseInt(jTextField4.getText());
        int x,y;
        float p;
        Rectangle bounds = jPanel1.getBounds();
        if(xc-rx<bounds.x)
        {
            JOptionPane.showMessageDialog(null, "Out of boundary");
        }
        else if(yc-ry<bounds.y)
        {
             JOptionPane.showMessageDialog(null, "Out of boundary");
        }
        else if(xc+rx>bounds.width)
        {
            JOptionPane.showMessageDialog(null, "Out of boundary"); 
        }
        else if(yc+ry>bounds.height)
        {
            JOptionPane.showMessageDialog(null, "Out of boundary");        
        }
        else       
        {
        fun(xc,yc,rx,ry);
        fun(xc,yc,ry,rx);
        }
    }                                        
  public void plotpoints(int xc,int yc,int x,int y)
    {
        Graphics2D g=(Graphics2D)jPanel1.getGraphics();
        g.drawLine(xc+x,yc+y,xc+x,yc+y);
        g.drawLine(xc-x,yc+y,xc-x,yc+y);
        g.drawLine(xc+x,yc-y,xc+x,yc-y);
        g.drawLine(xc-x,yc-y,xc-x,yc-y);
    }
  public void fun(int xc,int yc,int rx,int ry)
  {
           int x,y;
        float p;
        x=0;
        y=ry;
        plotpoints(xc,yc,x,y);
        p=(ry*ry)-(rx*rx*ry)+((rx*rx)/4);
        int px=2*ry*ry*x;
        int py=2*rx*rx*y;
        while(px<py)
        {
            x++;
            px+=2*ry*ry;
            if(p<0)
            {
                p+=px+ry*ry;
            }
            else
            {
                y--;
                py-=2*rx*rx;
                p+=px-py+ry*ry;
            }
            plotpoints(xc,yc,x,y);
            
        }
        p=(ry*ry)*((x+1/2)*(x+1/2))+rx*rx*(y-1)*(y-1)-(rx*rx*ry*ry);
        while(y>0)
        {
            y--;
            py-=2*rx*rx;
            if(p>0)
            {
                p+=rx*rx-py;
            }
            else
            {
                x++;
                px+=2*ry*ry;
                p+=rx*rx-py+px;
            }
            plotpoints(xc,yc,x,y);
        }

    }                                        

